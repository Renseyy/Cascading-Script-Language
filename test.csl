@keyframes openCover {
    from{
        transform: rotateY(0deg);
    }
    to{
        transform: rotateY(-180deg);
    }
}
@keyframes closeCover {
    from{
        transform: rotateY(-180deg);
    }
    to{
        transform: rotateY(0deg);
    }
}
@keyframes moveToCenter {
    from{
        transform: translate(-50%,-50%);
    }
    to{
        transform: translate(0,-50%);
    }
}
@keyframes moveFromCenter {
    to{
        transform: translate(-50%,-50%);
    }
    from{
        transform: translate(0,-50%);
    }
}
body{
    position: absolute;
    padding: 0;
    margin: 0;
    width: 100vw;
    height:100vh;
    overflow: hidden;
    perspective: 800px;
    font-family: 'Sriracha', cursive;
    background: rgb(181,96,78);
    background: radial-gradient(circle, rgba(181,96,78,1) 0%, rgba(134,57,22,1) 20%, rgba(0,0,0,1) 100%);
}
.Full{
    background: radial-gradient(circle, rgba(181,96,78,1) 0%, rgba(134,57,22,1) 10%, rgba(0,0,0,1) 100%), linear-gradient(0deg, rgba(181,96,78,0.3533613274411327) 0%, rgba(134,57,22,1) 10%, rgba(0,0,0,1) 100%);
    width:100%;
    height:100%;
    position: absolute;
}
.Table{
    width:300%;
    height:300%;
    transform: translate(-50%,0) rotateX(40deg) scale(0.5);
    transform-origin: bottom;
    bottom:0;
    left:50%;
    position: absolute;
    background-image: url('../img/plank.jpg');
    background-size: cover;
    border-radius: 100px;
}
.Book{
    position: absolute;
    top:50%;
    left:50%;
    --pageWidth:426px;
    --pageHeight:633px;
    width:var(--pageWidth);
    height:var(--pageHeight);
    transform: translate(-50%,-50%);
    .cover{
        position: absolute;
        z-index: 1000;
        left:0;
        width:100%;
        height:100%;
        .-top{
            position: absolute;
            left:0;
            top:0;
            transform-origin: 0% 50%;
            width:var(--pageWidth);
            height:var(--pageHeight);
            transform-style: preserve-3d;
            ._face{
                width:100%;
                height:100%;
                position: absolute;
                backface-visibility: hidden;
                &.--front{
                    background: red;
                }
                &.--back{
                    background: #fffdd0 linear-gradient(90deg, rgba(255,253,208,1) 0%, rgba(255,253,208,1) 90%, rgb(133, 131, 108) 100%);
                    transform: rotateY(180deg);
                }
            }
            
            
        }
    }
    .page{
        position: absolute;
        width:100%;
        height:100%;
        .-top{
            position: absolute;
            top:0;
            left:0;
            transform-origin: 0% 50%;
            width:100%;
            height:100%;
            transform-style: preserve-3d;
            ._face{
                width:100%;
                height:100%;
                position: absolute;
                backface-visibility: hidden;
                &.--front{
                    background: #fffdd0  linear-gradient(90deg, rgb(133, 131, 108) 0%, rgba(255,253,208,1) 10%, rgba(255,253,208,1) 100%);
                    overflow: hidden;
                    
                }
                &.--back{
                    background-color: green;
                    transform: rotateY(180deg);
                }
            }
            
            
        }
    }
}

body:hover{
    perspective: 800px;
    .cover .-top{
        animation: openCover 1s cubic-bezier(.77,0,.18,1) both;

    }
    .Book{
        animation: moveToCenter 1s cubic-bezier(.77,0,.18,1) both;
    }
}
